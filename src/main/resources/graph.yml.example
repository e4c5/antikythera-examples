# Knowledge Graph Configuration Example
# Copy this file to graph.yml and update with your Neo4j credentials
# The actual graph.yml file should NOT be committed to version control

base_path: /path/to/project/src/main/java  # Can be overridden with --base-path

neo4j:
  uri: bolt://localhost:7687
  username: neo4j
  password: ${NEO4J_PASSWORD}  # Set NEO4J_PASSWORD environment variable
  database: neo4j
  batch_size: 1000  # supported aliases: batch_size, batchSize
