# Copy to graph.yml and update with your credentials.
# The actual graph.yml file should NOT be committed to version control.

base_path: /path/to/project/src/main/java    # Can be overridden with --base-path
base_package: com.example.myproject

graph:
  type: age
  batch_size: 1000

  age:
    url: jdbc:postgresql://localhost:5432/postgres
    user: postgres
    password: ${AGE_PASSWORD}                 # Set AGE_PASSWORD environment variable
    graph_name: antikythera_graph
