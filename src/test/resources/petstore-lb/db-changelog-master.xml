<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="jules">
        <createTable tableName="category">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="jules">
        <createTable tableName="product">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="category_id" type="int"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="jules">
        <createTable tableName="orders">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="int"/>
            <column name="status" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <include file="01-add-columns.xml" relativeToChangelogFile="true"/>
    <include file="02-add-indexes.xml" relativeToChangelogFile="true"/>

    <changeSet id="99" author="jules">
        <dropIndex indexName="idx_product_name" tableName="product"/>
    </changeSet>

</databaseChangeLog>
